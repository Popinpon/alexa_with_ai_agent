{
  "version": "2.0",
  "logging": {
      "logLevel": {
         "default": "Information",
         "System.Net.Http": "Error",
         "System.Net.Http.HttpClient": "Error",
         "Host.Controllers.Host": "Error",
         "Function.http_trigger": "Information"
      }, 
      "applicationInsights": { 
          "samplingSettings": { 
              "isEnabled": true, 
              "excludedTypes": "Request;Exception;Trace" 
          }, 
          "enableLiveMetricsFilters": true
      }
  },
  "extensionBundle": {
    "id": "Microsoft.Azure.Functions.ExtensionBundle.Preview",
    "version": "[4.*, 5.0.0)"
  },
  "extensions": {
    "mcp": {
      "instructions": "SwitchBot IoT device control tools. Use these tools to get device status and control lights, air conditioners, and other smart home devices.",
      "serverName": "SwitchBotServer",
      "serverVersion": "2.0.0"
    }
  }
}